@page "/"

<h3>Empleados</h3>
<NavLink class="nav-link" href="/employeeedit">
    <button class="btn btn-primary"><span class="oi oi-plus" aria-hidden="true"></span> Agregar</button>
</NavLink>

@if (Employees == null)
{
    <div class="spinner"></div>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Telefono</th>
                <th scope="col">Departamento</th>
                <th scope="col">Estatus</th>
                @*<th scope="col"></th>*@
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Employees)
            {
                <tr>
                    <th scope="row">@employee.EmployeeId</th>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>@employee.Phone</td>
                    <td>@employee.Department.LongDesc</td>
                    @if (@employee.IsActive)
                    {
                        <td><button class="btn btn-success" @onclick="(() => ChangeStatus_Click(employee))">Activo </button></td>
                    }
                    else
                    {
                        <td><button class="btn btn-danger" @onclick="(() => ChangeStatus_Click(employee))">Inactivo</button></td>
                    }

                    @*<td><a href="@($"/employeedetails/{employee.EmployeeId}")" class="btn btn-primary m-1">Ver</a></td>*@
                    <td><a href="@($"/employeeedit/{employee.EmployeeId}")" class="btn btn-primary m-1">Editar</a></td>
                </tr>
            }
        </tbody>
    </table>
}
