@page "/employeeedit";

<EditForm Model="@Employee" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <h3>@PageHeaderText</h3>
    <hr />
    <ValidationSummary />


    <div class="form-group row">
        <label for="firstName" class="col-sm-2 col-form-label">
            Nombre
        </label>
        <div class="col-sm-10">
            <InputText id="firstName" class="form-control" placeholder="Nombre" @bind-Value="Employee.FirstName" />
            <ValidationMessage For="@(() => Employee.FirstName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="lastName" class="col-sm-2 col-form-label">
            Apellido
        </label>
        <div class="col-sm-10">
            <InputText id="lastName" class="form-control" placeholder="Apellido" @bind-Value="Employee.LastName" />
            <ValidationMessage For="@(() => Employee.LastName)" />
        </div>
    </div>

    <div class="form-group row">
        <label for="phone" class="col-sm-2 col-form-label">
            Teléfono
        </label>
        <div class="col-sm-10">
            <InputText id="phone" class="form-control" placeholder="Teléfono" @bind-Value="Employee.Phone" />
        </div>
    </div>

    <div class="form-group row">
        <label for="address" class="col-sm-2 col-form-label">
            Dirección'
        </label>
        <div class="col-sm-10">
            <InputText id="address" class="form-control" placeholder="Dirección" @bind-Value="Employee.Address" />
        </div>
    </div>

    <div class="form-group row">
        <label for="department" class="col-sm-2 col-form-label">
            Departamento
        </label>
        <div class="col-sm-10">
            <CustomInputSelect id="department" @bind-Value="Employee.DepartmentId" class="form-control">
                @foreach (var dept in Departments)
                {
                    <option value="@dept.DepartmentId">@dept.LongDesc</option>
                }
            </CustomInputSelect>
        </div>
    </div>

    <a href="/" class="btn btn-primary"><span class="oi oi-arrow-left" aria-hidden="true"></span>Volver</a>
    <button class="btn btn-primary" type="submit"><span class="oi oi-hard-drive" aria-hidden="true"></span>Guardar</button>
</EditForm>